<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lrcortizo.android.mathematicdice">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.HistoryActivity" />
        <activity android:name=".ui.PlayersActivity" />
        <activity android:name=".ui.DiceActivity" />
        <activity android:name=".ui.Turn1Activity" />
        <activity android:name=".ui.Turn2Activity" />
        <activity android:name=".ui.FinalActivity" />
        <activity android:name=".ui.LanguageActivity" />
        <activity android:name=".ui.InstructionsActivity" />
    </application>

</manifest>